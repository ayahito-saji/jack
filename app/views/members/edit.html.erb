<% provide(:page_title, "#{@member.name}の編集") %>
<div class="page-header" title="edit <%= @member.name %>"></div>
<div class="container">
  <%= form_for @member do |f| %>
      <div class="form-group">
        <label>メンバー名</label>
        <%= f.text_field :name, class:'form-control' %>
      </div>

      <div class="form-group">
        <label>メールアドレス</label>
        <%= f.email_field :email, class:'form-control' %>
      </div>

      <div class="form-group">
        <label>所属大学</label>
        <%= f.text_field :university, class:'form-control' %>
      </div>

      <div class="form-group">
        <label>ログインパスワード</label>
        <%= f.password_field :password, class:'form-control' %>
      </div>

      <div class="form-group">
        <label>ログインパスワード再確認</label>
        <%= f.password_field :password_confirmation, class:'form-control' %>
      </div>

      <div class="form-group">
        <label>入学年月日(日付は 4月1日に設定してください。)</label><br/>
        <%= f.date_select :enroll, class:'form-control' %>
      </div>

      <div class="form-group">
        <label>プロフィール</label>
        <%= f.text_area :profile, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit %>
      </div>
  <% end %>
  <div class="gravatar_edit">
    <%= gravatar_for @member %>
    <a href="http://gravatar.com/emails" target="_blank">change</a>
  </div>
</div>
