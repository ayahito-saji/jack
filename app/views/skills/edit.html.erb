<% provide(:page_title, "スキル編集") %>
<div class="page-header" title="edit skill"></div>
<div class="container">
  <div class="padding"></div>
  <%= form_for @skill do |f| %>
      <div class="form-group">
        <label>スキル・言語名(HTML, Python, Adobe Illustrator, Unityなど)</label>
        <%= f.text_field :name, class:'form-control' %>
      </div>

      <div class="form-group">
        <label>やり始めた日</label>
        <%= f.date_select :start_at, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit %>
      </div>
  <% end %>
</div>